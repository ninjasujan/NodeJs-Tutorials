
extends layouts/mainLayout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://images.pexels.com/photos/5834/nature-grass-leaf-green.jpg?cs=srgb&dl=book-chapter-six-5834.jpg&fm=jpg", alt="A Book" height="200px" width="200px")
                        .card__content
                            h2.product__price $9.99
                            p.product__description A very interesting book
                        .card__action
                            button.btn Add to cart
        else    
            h1 No products




        

